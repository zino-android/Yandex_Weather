<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.preference.ListPreference
        android:defaultValue="0"
        android:entries="@array/refresh_entries"
        android:entryValues="@array/refresh_values"
        android:key="refresh_update"
        android:title="@string/settings_auto_update" />

    <android.support.v7.preference.Preference
        android:defaultValue="@string/default_city"
        android:inputType="text"
        android:key="current_city"
        android:summary=""
        android:title="@string/settings_change_city" />

    <android.support.v7.preference.Preference
        android:key="about"
        android:summary=""
        android:title="@string/menu_about" />

</android.support.v7.preference.PreferenceScreen>